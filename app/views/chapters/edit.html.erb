<% content_for :title, "Edit Chapter" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Edit Chapter</h1>
  <p class="text-gray-600 mt-2">Update title, label, number, and content for this chapter.</p>

  <%= render "form", chapter: @chapter %>

  <%= link_to "View Chapter", @chapter, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to All Chapters", list_chapters_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
