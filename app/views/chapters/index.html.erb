<% content_for :title, "Autobiography Template - Home" %>

<!-- Hero Section with Header Image -->
<section class="relative bg-gradient-to-br from-purple-900 via-blue-800 to-teal-700 text-white">
  <div class="absolute inset-0 bg-black bg-opacity-30"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32">
    <div class="text-center">
      <h1 class="text-4xl sm:text-6xl font-bold mb-6 bg-gradient-to-r from-yellow-400 to-pink-400 bg-clip-text text-transparent">
        [Your Name]'s Life Story
      </h1>
      <p class="text-xl sm:text-2xl mb-8 text-blue-100 max-w-3xl mx-auto">
        Welcome to my digital autobiography. Here you'll find the stories, memories, and experiences that have shaped my journey through life.
        <br>A personal collection of moments worth sharing.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <%= link_to "Start Reading", list_chapters_path, 
            class: "bg-gradient-to-r from-pink-500 to-rose-500 hover:from-pink-600 hover:to-rose-600 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all transform hover:scale-105 shadow-lg" %>
        <%= link_to "View Gallery", photos_path, 
            class: "border-2 border-teal-300 text-teal-300 hover:bg-teal-300 hover:text-gray-900 px-8 py-4 rounded-lg font-semibold text-lg transition-all transform hover:scale-105" %>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="py-16 bg-gradient-to-br from-orange-50 to-pink-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent mb-4">Explore My Story</h2>
      <p class="text-xl text-gray-700 max-w-2xl mx-auto">
        Discover the different ways you can experience my autobiography
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
      <!-- Chapters Feature -->
      <div class="text-center group bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-2">
        <div class="bg-gradient-to-br from-purple-500 to-blue-500 rounded-full w-20 h-20 mx-auto mb-6 flex items-center justify-center group-hover:scale-110 transition-transform">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Life Chapters</h3>
        <p class="text-gray-600 mb-6 leading-relaxed">
          Read through the different chapters of my life story, each with rich text content 
          and accompanying images that bring the memories to life.
        </p>
        <%= link_to "Read Chapters", list_chapters_path, 
            class: "inline-flex items-center bg-gradient-to-r from-purple-600 to-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-purple-700 hover:to-blue-700 transition-all" %>
      </div>

      <!-- Gallery Feature -->
      <div class="text-center group bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-2">
        <div class="bg-gradient-to-br from-green-500 to-teal-500 rounded-full w-20 h-20 mx-auto mb-6 flex items-center justify-center group-hover:scale-110 transition-transform">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Photo Gallery</h3>
        <p class="text-gray-600 mb-6 leading-relaxed">
          Browse through a curated collection of photographs that capture important 
          moments, people, and places throughout my journey.
        </p>
        <%= link_to "View Gallery", photos_path, 
            class: "inline-flex items-center bg-gradient-to-r from-green-600 to-teal-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-green-700 hover:to-teal-700 transition-all" %>
      </div>
    </div>
  </div>
</section>

<!-- Recent Chapters Section -->
<% if @chapters.any? %>
<section class="py-16 bg-gradient-to-br from-indigo-50 via-white to-cyan-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-4">Recent Chapters</h2>
      <p class="text-gray-600">The latest additions to my story</p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @chapters.limit(3).each do |chapter| %>
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100">
          <% if false && chapter.image_header.attached? %>
            <div class="h-48 overflow-hidden bg-gradient-to-br from-gray-100 to-gray-200">
              <%= image_tag chapter.image_header, 
                  alt: chapter.title,
                  class: "w-full h-48 object-cover hover:scale-105 transition-transform duration-300",
                  loading: "lazy" %>
            </div>
          <% else %>
            <div class="h-48 bg-gradient-to-br from-purple-400 via-pink-400 to-orange-400 flex items-center justify-center">
              <% if chapter.intro_chapter? %>
                <span class="text-white text-xl font-bold">Introduction</span>
              <% else %>
                <span class="text-white text-xl font-bold">Chapter <%= chapter.chapter_number %></span>
              <% end %>
            </div>
          <% end %>
          
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">
              <%= link_to chapter.title, chapter, class: "hover:text-purple-600 transition-colors" %>
            </h3>
            <% if chapter.subtitle.present? %>
              <p class="text-gray-600 mb-3 font-medium"><%= chapter.subtitle %></p>
            <% end %>
            <p class="text-gray-700 mb-4 leading-relaxed">
              <%= truncate(strip_tags(chapter.content.to_s), length: 120) %>
            </p>
            <%= link_to "Read More", chapter, 
                class: "inline-flex items-center bg-gradient-to-r from-purple-600 to-pink-600 text-white px-4 py-2 rounded-lg font-medium hover:from-purple-700 hover:to-pink-700 transition-all text-sm" %>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="text-center mt-12">
      <%= link_to "View All Chapters", list_chapters_path, 
          class: "bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white px-10 py-4 rounded-xl font-semibold text-lg transition-all transform hover:scale-105 shadow-lg" %>
    </div>
  </div>
</section>
<% end %>
