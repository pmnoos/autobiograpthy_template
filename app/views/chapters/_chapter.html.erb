<article id="<%= dom_id chapter %>" class="w-full max-w-4xl mx-auto my-8 bg-white shadow-lg rounded-lg overflow-hidden">
  <!-- Header Image -->
  <% if chapter.image_header.attached? %>
    <div class="w-full h-64 bg-gray-200">
      <%= image_tag chapter.image_header, class: "w-full h-full object-cover", alt: chapter.title %>
    </div>
  <% end %>
  
  <!-- Chapter Header -->
  <header class="px-8 py-6 bg-gradient-to-r from-gray-50 to-white border-b">
    <div class="flex items-center gap-4 mb-2">
      <% if chapter.intro_chapter? %>
        <span class="bg-gradient-to-r from-purple-600 to-blue-600 text-white px-4 py-2 rounded-full text-sm font-bold">
          Introduction
        </span>
      <% else %>
        <span class="bg-gradient-to-r from-purple-600 to-blue-600 text-white px-4 py-2 rounded-full text-sm font-bold">
          Chapter <%= chapter.chapter_number %>
        </span>
      <% end %>
    </div>
    <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= chapter.title %></h1>
    <% if chapter.subtitle.present? %>
      <h2 class="text-xl text-gray-600 font-medium"><%= chapter.subtitle %></h2>
    <% end %>
  </header>
  
  <!-- Chapter Content -->
  <div class="px-8 py-6">
    <div class="prose prose-lg max-w-none text-gray-800 leading-relaxed">
      <%= chapter.content %>
    </div>
  </div>
</article>
