<%= form_with(model: photo, class: "contents") do |form| %>
  <% if photo.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul class="list-disc ml-6">
        <% photo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": photo.errors[:title].none?, "border-red-400 focus:outline-red-600": photo.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :image, "Photo" %>
    <%= form.file_field :image, accept: "image/*", class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": photo.errors[:image].none?, "border-red-400 focus:outline-red-600": photo.errors[:image].any?}] %>
    <% if photo.image.attached? %>
      <div class="mt-2">
        <%= image_tag photo.image, class: "w-32 h-32 object-cover rounded-md" %>
      </div>
    <% end %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": photo.errors[:description].none?, "border-red-400 focus:outline-red-600": photo.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :taken_at, "Date Taken" %>
    <%= form.date_field :taken_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": photo.errors[:taken_at].none?, "border-red-400 focus:outline-red-600": photo.errors[:taken_at].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
